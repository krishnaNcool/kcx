<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

	<bean id="generateQueryReportNotificationEmailDefinitionResource" class="de.hybris.platform.processengine.definition.ProcessDefinitionResource">
		<property name="resource" value="classpath:/kcxutilities/processes/queryReportNotificationEmailProcess.xml" />
	</bean>

	<bean id="generateQueryReportNotificationEmailAction" parent="abstractGenerateEmailAction">
		<property name="frontendTemplateName" value="QueryReportNotificationsEmailTemplate"/>
	</bean>

	<bean id="queryReportNotificationEventListener" class="com.kcxutilities.core.event.eventListener.QueryReportNotificationEventListener"
		  parent="abstractEventListener">
		<property name="modelService" ref="modelService"/>
		<property name="businessProcessService" ref="businessProcessService"/>
	</bean>
	
	<bean id="queryReportNotificationEmailContext" class="com.kcxutilities.core.process.email.context.QueryReportNotificationEmailContext" parent="abstractEmailContext" scope="prototype">
		<!-- Dependencies are injected via @Resource annotations -->
	</bean>

	<!-- Custom Query Notification Cron Job -->
	<bean id="cronJobNotificationDao" class="com.kcxutilities.core.dao.DefaultCronJobNotificationDao">
		<!-- Dependencies are injected via @Resource annotations -->
	</bean>
	
	<bean id="cronJobNotificationService" class="com.kcxutilities.core.service.DefaultCronJobNotificationService">
		<!-- Dependencies are injected via @Resource annotations -->
	</bean>
	
	<bean id="customQueryNotificationJob" class="com.kcxutilities.core.job.CustomQueryNotificationJob">
		<property name="cronJobNotificationService" ref="cronJobNotificationService"/>
	</bean>

</beans>
